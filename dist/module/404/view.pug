extends ../../layout/white/index

block content
    .error-page
        h2.headline.text-yellow  404
        .error-content
            h3
                i.fa.fa-warning.text-yellow
                |  Oops! Page not found.
            p
                | We could not find the page you were looking for.
                | Meanwhile, you may
                if(message.length > 0) 
                    a(href= message[0]) Trở về trang trước
                else 
                    a(href='/trang-chinh') trở về trang chủ
                |  or try using the search form.
            form.search-form
                .input-group
                    input.form-control(type='text', name='search', placeholder='Search')
                    .input-group-btn
                        button.btn.btn-warning.btn-flat(type='submit', name='submit')
                            i.fa.fa-search
            

