extends ../../layout/dashboard/index

block content-header
    h1 Quản lý đề thi
    ol.breadcrumb
        li
            a(href="#")
                i.fa.fa-dashboard
                | Quản lý thi thử
        li.active Quản lý đề thi

block content
    .row
        .col-md-12
            .box.box-primary
                .box-header.with-border
                    h3.box-title Danh sách các đề thi đã tạo
                .box-body
                    table.table.table-responsive
                        thead
                            tr
                                th Mã đề thi
                                th Tên đề thi
                                th SLCH nhập
                                th SLCH thi
                                th Ngày tạo
                                th Thao tác
                        tbody
                            each exam, index in examList
                                - var Structure = JSON.parse(exam.Structure)
                                tr
                                    td.text-center= exam.ExamId
                                    td= exam.ExamName
                                    td.text-center= Structure.QuestionNumberInput
                                    td.text-center= Structure.QuestionNumber
                                    td.text-center= moment(exam.CreatedAt).format("DD/MM/YYYY HH:mm")
                                    td.text-center
                                        a.btn.btn-sm.btn-info(href="/admin/tao-thi-thu-chung/buoc-2?makythi=" + exam.ExamId,) Sửa
                                        a.btn.btn-sm.btn-warning(href="/admin/dieu-chinh-phat-hanh-thi-thu?makythi=" + exam.ExamId,style="margin-left: 5px;") #{exam.IsPublished ? "Ngưng phát hành" : "Phát hành"}
                    
                        
